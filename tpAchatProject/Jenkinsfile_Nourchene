pipeline {
    agent any
    environment {
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http"
        NEXUS_URL = "172.10.0.140:8081"
        NEXUS_REPOSITORY = "maven-releases"
        NEXUS_CREDENTIAL_ID = "Nexus-Creds"
    }
    stages {
        
        stage("Maven Clean") {
            steps {
                script {
                    sh "mvn -f'tpAchatProject/pom.xml' clean -DskipTests=true -Drevision=${env.BUILD_NUMBER}"
                }
            }
        }
        stage("Maven Compile") {
            steps {
                script {
                    sh "mvn -f'tpAchatProject/pom.xml' compile -DskipTests=true -Drevision=${env.BUILD_NUMBER}"
                }
            }
        }
        stage("Maven test") {
            steps {
                script {
                    sh "mvn -f'tpAchatProject/pom.xml' test -Drevision=${env.BUILD_NUMBER}"
                }
            }
        }
        stage("Maven Sonarqube") {
            steps {
                script {
                    sh "mvn -f'tpAchatProject/pom.xml' sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar -Drevision=${env.BUILD_NUMBER}"
                }
            }
        }
        stage("Maven Build") {
            steps {
                script {
                    sh "mvn -f'tpAchatProject/pom.xml' package -DskipTests=false -Drevision=${env.BUILD_NUMBER}"
                }
                echo ":$BUILD_NUMBER"
            }
        }
        stage("Publish to Nexus Repository Manager") {
            steps {
                script {
                    pom = readMavenPom file: "tpAchatProject/pom.xml";
                    filesByGlob = findFiles(glob: "tpAchatProject/target/*.${pom.packaging}");
                    echo "${filesByGlob[0].name} ${filesByGlob[0].path} ${filesByGlob[0].directory} ${filesByGlob[0].length} ${filesByGlob[0].lastModified}"
                    artifactPath = filesByGlob[0].path;
                    artifactExists = fileExists artifactPath;
                    if(artifactExists) {
                        echo "*** File: ${artifactPath}, group: ${pom.groupId}, packaging: ${pom.packaging}, version ${pom.version}";
                        nexusArtifactUploader(
                            nexusVersion: NEXUS_VERSION,
                            protocol: NEXUS_PROTOCOL,
                            nexusUrl: NEXUS_URL,
                            groupId: pom.groupId,
                            version: pom.version,
                            repository: NEXUS_REPOSITORY,
                            credentialsId: NEXUS_CREDENTIAL_ID,
                            artifacts: [
                                [artifactId: pom.artifactId,
                                classifier: '',
                                file: artifactPath,
                                type: pom.packaging],
                                [artifactId: pom.artifactId,
                                classifier: '',
                                file: "tpAchatProject/pom.xml",
                                type: "pom"]
                            ]
                        );
                    } else {
                        error "*** File: ${artifactPath}, could not be found";
                    }
                }
            }
        }
        stage('Building Docker Image') {
                    steps {
                        dir('tpAchatProject/'){
                            sh 'docker build -t nourcheneriahi/tpachat .'
                                }
                            }
                        }
                stage('Login to DockerHub') {
                    steps{
                        dir('tpAchatProject/'){
                            sh 'docker login -u nourcheneriahi -p dockerhub'
                            }
                        }
                    }
                stage('Push to DockerHub') {
                    steps{
                        dir('tpAchatProject/'){
                            sh 'docker push nourcheneriahi/tpachat'
                             }
                        }
                    }
                stage('Docker Compose'){
                    steps{
                       dir('tpAchatProject/'){
                            sh 'docker-compose up -d'
                            }
                       }
                    }
    }
}
